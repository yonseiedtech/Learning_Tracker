modules = ["python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_gemini_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "freetype", "iana-etc", "lcms2", "libimagequant", "libjpeg", "libreoffice-still", "libtiff", "libwebp", "libxcrypt", "openjpeg", "poppler-utils", "poppler_utils", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--worker-class=eventlet", "--workers=1", "main:app"]
